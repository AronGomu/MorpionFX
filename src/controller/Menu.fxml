<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="600.0" style="-fx-background-color: #000000;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MenuController">
   <center>
      <AnchorPane fx:id="bgPane" prefHeight="600.0" prefWidth="600.0" style="-fx-background-color: #03A9F4;" BorderPane.alignment="CENTER">
         <children>
            <Button layoutX="100.0" layoutY="104.0" mnemonicParsing="false" onAction="#vsPlayerButtonEvent" prefHeight="150.0" prefWidth="400.0" style="-fx-background-color: #FFEB3B; -fx-border-radius: 10;" text="VS PLAYER" textAlignment="CENTER">
               <font>
                  <Font name="Liberation Mono" size="56.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <Button layoutX="100.0" layoutY="276.0" mnemonicParsing="false" onAction="#vsIAButtonEvent" prefHeight="150.0" prefWidth="400.0" style="-fx-background-color: #673AB7;" text="VS AI" textAlignment="CENTER" textFill="WHITE">
               <font>
                  <Font name="Liberation Mono" size="56.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <Button layoutX="100.0" layoutY="456.0" mnemonicParsing="false" onAction="#optionsButtonEvent" prefHeight="100.0" prefWidth="400.0" style="-fx-background-color: #795548;" text="OPTIONS" textAlignment="CENTER" textFill="WHITE">
               <font>
                  <Font name="Liberation Mono" size="60.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <Label alignment="CENTER" contentDisplay="CENTER" layoutX="100.0" layoutY="10.0" prefHeight="50.0" prefWidth="400.0" text="MORPIONO!" textAlignment="CENTER" textFill="#ff9800">
               <font>
                  <Font name="Liberation Mono Bold" size="65.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>
   </center>
</BorderPane>
